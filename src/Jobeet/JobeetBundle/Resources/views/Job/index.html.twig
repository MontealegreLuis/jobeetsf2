{% extends 'JobeetJobeetBundle::base.html.twig' %}

{% block body -%}
    <div class="page-header">
        <h1>Job list</h1>
    </div>

    <p>
        <a href="{{ path('job_new') }}" class="btn btn-success">
            Create a new job entry
        </a>
    </p>

    {% if entities|length > 0 %}
	    <table class="table table-striped table-bordered">
	        <thead>
	            <tr>
	                <th>Position</th>
	                <th>Company</th>
	                <th>Location</th>
	                <th>Type</th>
	                <th>Description</th>
	                <th>Expires at</th>
	                <th>Actions</th>
	            </tr>
	        </thead>
	        <tbody>
	        {% for entity in entities %}
	            <tr>
	                <td><a href="{{ path('job_show', { 'id': entity.id }) }}">{{ entity.position }}</a></td>
	                <td>{{ entity.company }}</td>
	                <td>{{ entity.location }}</td>
	                <td>{{ entity.type }}</td>
	                <td>{{ entity.description }}</td>
	                <td>{% if entity.expiresAt %}{{ entity.expiresAt|date('Y-m-d') }}{% endif %}</td>
	                <td>
                        <a href="{{ path('job_edit', { 'id': entity.id }) }}">edit</a>
	                </td>
	            </tr>
	        {% endfor %}
	        </tbody>
	    </table>
    {% else %}
        <div class="well">There are no job entries</div>
    {% endif %}

{% endblock %}
