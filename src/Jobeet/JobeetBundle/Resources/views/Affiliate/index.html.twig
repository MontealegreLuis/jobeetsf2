{% extends 'JobeetJobeetBundle::base.html.twig' %}

{% block body -%}
    <h1>Affiliate list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Url</th>
                <th>Email</th>
                <th>Token</th>
                <th>Isactive</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('affiliate_show', { 'id': entity.id }) }}">{{ entity.url }}</a></td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.token }}</td>
                <td>{{ entity.isActive }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('affiliate_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('affiliate_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('affiliate_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
