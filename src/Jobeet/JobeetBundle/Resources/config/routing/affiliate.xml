<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="affiliate" pattern="/">
        <default key="_controller">JobeetJobeetBundle:Affiliate:index</default>
    </route>

    <route id="affiliate_show" pattern="/{id}/show">
        <default key="_controller">JobeetJobeetBundle:Affiliate:show</default>
    </route>

    <route id="affiliate_new" pattern="/new">
        <default key="_controller">JobeetJobeetBundle:Affiliate:new</default>
    </route>

    <route id="affiliate_create" pattern="/create">
        <default key="_controller">JobeetJobeetBundle:Affiliate:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="affiliate_edit" pattern="/{id}/edit">
        <default key="_controller">JobeetJobeetBundle:Affiliate:edit</default>
    </route>

    <route id="affiliate_update" pattern="/{id}/update">
        <default key="_controller">JobeetJobeetBundle:Affiliate:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="affiliate_delete" pattern="/{id}/delete">
        <default key="_controller">JobeetJobeetBundle:Affiliate:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
